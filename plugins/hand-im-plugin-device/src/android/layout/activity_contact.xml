<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.hand.im.contact.ContactActivity">
	<RelativeLayout
        android:id="@+id/nav_bar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">
        <TextView
            android:id="@+id/arrow_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#24559C"
            android:layout_alignParentLeft="true"
            android:text="返回"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/back"
            android:drawableStart="@drawable/back"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            />
        <TextView
            android:id="@+id/textv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="多人聊天"
            android:textSize="19sp"
            android:textColor="#4A4A4A"/>
        <Button
            android:id="@+id/btnOK"
            android:layout_height="38dp"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/ok_button_shape"
            android:text="发起"
            android:textColor="#ffffff"
            android:visibility="invisible" />
    </RelativeLayout>
	<View
        android:id="@+id/line_bar"
        android:layout_width="match_parent"
        android:layout_below="@+id/nav_bar"
        android:layout_height="1dp"
        android:background="#FF003CA7"/>
    <LinearLayout
        android:id="@+id/layoutSearch"
		android:layout_below="@+id/line_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
   
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <ImageView
                    android:id="@+id/imgSearch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:clickable="true"
                    android:src="@drawable/search" />

                <EditText
                    android:id="@+id/edtSearch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/imgSearch"
                    android:background="@null"
                    android:hint="搜索"
                    android:paddingLeft="10dp"
                    android:textColor="#000000"
                    android:textColorHint="#CFCFCF" />

            </RelativeLayout>

            <View
                android:id="@+id/view_lv_item_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:background="#e6e6e6" />
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layoutSearch"
        android:divider="@null"></ListView>
    <TextView
        android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="#a2a2a2"
        android:text="0条搜索记录"
        />
    <TextView
        android:id="@+id/dialog"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:background="#020202"
        android:gravity="center"
        android:textColor="#ffffffff"
        android:textSize="30sp"
        android:visibility="invisible" />

    <com.hand.im.contact.SideBar
        android:id="@+id/sidebar"
        android:layout_width="20dip"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/layoutSearch" />

</RelativeLayout>
