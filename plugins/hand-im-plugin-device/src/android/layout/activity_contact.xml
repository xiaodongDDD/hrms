<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context="com.hand.im.contact.ContactActivity">

    <RelativeLayout
        android:id="@+id/nav_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/nav_bar">

        <TextView
            android:id="@+id/arrow_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:drawableLeft="@drawable/white_back"
            android:drawableStart="@drawable/white_back"
            android:gravity="center_vertical"
            android:text="返回"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="创建多人聊天"
            android:textColor="#ffffff"
            android:textSize="18sp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layoutSearch"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/nav_bar"
        android:background="#ffffff"
        android:orientation="vertical"
        android:padding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:clickable="true"
                android:src="@drawable/search" />

            <EditText
                android:id="@+id/edtSearch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imgSearch"
                android:background="@drawable/edittext_bg"
                android:hint="搜索"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:textColorHint="#CFCFCF"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e2e2e2" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/nav_org"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_below="@+id/layoutSearch"
                android:background="#f2f2f2"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:text="组织架构"
                    android:textColor="#FF003CA7" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/lyt_org_struct"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_below="@+id/nav_org">

                <ImageView
                    android:id="@+id/hand_icon"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="14dp"
                    android:src="@drawable/hand_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/hand_icon"
                    android:text="上海汉得信息技术股份有限公司"
                    android:textColor="#000000" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/right_back" />
            </RelativeLayout>

            <View
                android:id="@+id/line_bar2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/lyt_org_struct"
                android:background="#e2e2e2" />

            <RelativeLayout
                android:id="@+id/lyt_org_self_struct"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_below="@+id/line_bar2"
                android:clickable="false">

                <ImageView
                    android:id="@+id/self_org"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="14dp"
                    android:src="@drawable/self_org" />

                <ProgressBar
                    android:id="@+id/loading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/self_org" />

                <TextView
                    android:id="@+id/txtSelfOrg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_toRightOf="@+id/self_org"
                    android:textColor="#000000" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/right_back" />
            </RelativeLayout>


            <LinearLayout
                android:id="@+id/my_project"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_below="@+id/lyt_org_self_struct"
                android:background="#f2f2f2"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:text="我的项目"
                    android:textColor="#FF003CA7" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ProgressBar
                    android:id="@+id/projectLoading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal" />

                <ListView
                    android:id="@+id/lsv_my_project"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/my_project"
                    android:divider="#e2e2e2"
                    android:dividerHeight="1dp"></ListView>

                <TextView
                    android:id="@+id/txtProjectTip"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="项目列表为空"
                    android:textColor="#c2c2c2" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/often_contact"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:background="#f2f2f2"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:text="常用联系人"
                    android:textColor="#FF003CA7" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ProgressBar
                    android:id="@+id/oftenLoading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal" />

                <ListView
                    android:id="@+id/lsv_often_contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="#e2e2e2"
                    android:dividerHeight="1dp"></ListView>

                <TextView
                    android:id="@+id/txtTip"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="最近联系人为空"
                    android:textColor="#c2c2c2" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <View
        android:id="@+id/line_bar3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/lyt_org_self_struct"
        android:background="#e2e2e2" />

    <RelativeLayout
        android:id="@+id/select_info"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <TextView
            android:id="@+id/tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="已选择:"
            android:textColor="#FF003CA7" />

        <TextView
            android:id="@+id/txt_check_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tip"
            android:textColor="#FF003CA7" />

        <LinearLayout
            android:id="@+id/btnOK"
            android:layout_width="68dp"
            android:layout_height="34dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_dark_blue"
            android:clickable="true"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确定"
                android:textColor="#ffffff" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
