<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.hand.im.contact.ContactActivity">

    <RelativeLayout
        android:id="@+id/nav_bar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/arrow_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:drawableLeft="@drawable/back"
            android:drawableStart="@drawable/back"
            android:gravity="center_vertical"
            android:text="返回"
            android:textColor="#24559C"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="多人聊天"
            android:textColor="#4A4A4A"
            android:textSize="19sp" />

        <Button
            android:id="@+id/btnOK"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/ok_button_shape"
            android:text="发起"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:visibility="invisible" />
    </RelativeLayout>

    <View
        android:id="@+id/line_bar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/nav_bar"
        android:background="#FF003CA7" />

    <LinearLayout
        android:id="@+id/layoutSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line_bar"
        android:background="#e2e2e2"
        android:orientation="vertical"
        android:padding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edittext_bg">

            <ImageView
                android:id="@+id/imgSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:clickable="true"
                android:src="@drawable/search" />

            <EditText
                android:id="@+id/edtSearch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imgSearch"
                android:background="@drawable/edittext_bg"
                android:hint="搜索"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:textColorHint="#CFCFCF" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/lyt_org_struct"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_below="@+id/layoutSearch">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="组织架构"
            android:textColor="#000000" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/btn_next" />
    </RelativeLayout>

    <View
        android:id="@+id/line_bar2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/lyt_org_struct"
        android:background="#e2e2e2" />

    <RelativeLayout
        android:id="@+id/lyt_org_self_struct"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_below="@+id/line_bar2"
        android:clickable="false">
        <ProgressBar
            android:id="@+id/loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/txtSelfOrg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="#000000" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/btn_next" />
    </RelativeLayout>

    <View
        android:id="@+id/line_bar3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/lyt_org_self_struct"
        android:background="#e2e2e2" />

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/line_bar3"
        android:divider="@null"></ListView>

    <TextView
        android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="0条搜索记录"
        android:textColor="#a2a2a2" />

    <TextView
        android:id="@+id/dialog"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:background="#020202"
        android:gravity="center"
        android:textColor="#ffffffff"
        android:textSize="30sp"
        android:visibility="invisible" />

    <com.hand.im.contact.SideBar
        android:visibility="gone"
        android:id="@+id/sidebar"
        android:layout_width="20dip"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/line_bar3" />

</RelativeLayout>
