<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#FFFFFF"
              >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">
        <TextView
            android:id="@+id/textv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#24559C"
            android:text="返回"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/back"
            android:drawableStart="@drawable/back"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            />
        <TextView
            android:id="@+id/textv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="姓名"
            android:gravity="center"
            android:textSize="19sp"
            android:textColor="#4A4A4A"/>
        <ImageView
            android:id="@+id/imgv_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dial_2x"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FF003CA7"/>
    <ListView
        android:id="@+id/listv_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:transcriptMode="normal"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="10dp"
        android:divider="#00000000"
        android:dividerHeight="20dp"
        android:overScrollFooter="@android:color/transparent"
        android:overScrollHeader="@android:color/transparent"
        android:overScrollMode="never"
        android:scrollbars="none">
    </ListView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >
        <View android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="#FFD2D2D2"/>
        <EditText
            android:id="@+id/edit_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:textColor="#000000"
            android:hint="输入消息..."
            android:cursorVisible="true"
            android:textColorHint="#FFD2D2D2"
            android:background="#FFFFFFFF"
            android:layout_gravity="bottom"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="5dp">
            <ImageView
                android:id="@+id/imgv_emjoe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_emjoe"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                />
            <ImageView
                android:id="@+id/imgv_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_record"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                />
            <ImageView
                android:id="@+id/imgv_album"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_album"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                />
            <ImageView
                android:id="@+id/imgv_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_camera"
                />
            <TextView
                android:id="@+id/btn_send"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:gravity="center"
                android:background="#FFFFFF"
                android:text="发送"
                android:textColor="#FFD2D2D2"
                android:paddingLeft="20dp"
                android:paddingStart="20dp"
                android:paddingRight="10dp"
                android:paddingEnd="10dp"
                />
        </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_facechoose"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="vertical"
        android:visibility="gone">
        <android.support.v4.view.ViewPager
            android:id="@+id/vp_contains"
            android:layout_width="match_parent"
            android:layout_height="120dp" >
        </android.support.v4.view.ViewPager>
        <LinearLayout
            android:id="@+id/iv_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:orientation="horizontal" >
        </LinearLayout>
    </LinearLayout>
    <com.hand.im.VoiceLayout
        android:id="@+id/voice_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
    </com.hand.im.VoiceLayout>
</LinearLayout>