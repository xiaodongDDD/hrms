<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#000000">

  <android.support.v4.view.ViewPager
    android:id="@+id/vp_photo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true">

  </android.support.v4.view.ViewPager>

  <RelativeLayout
    android:id="@+id/rl_head_container"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:background="#000000">

    <LinearLayout
      android:id="@+id/ll_back"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:background="@drawable/back_select"
      android:gravity="center">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="返回"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />
    </LinearLayout>

    <TextView
      android:id="@+id/tv_current_position"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerInParent="true"
      android:text="1/100"
      android:textColor="#FFFFFF"
      android:textSize="16sp" />

    <com.hand.im.widget.SelectView
      android:id="@+id/sv_point"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
      android:layout_marginRight="3dp"
      android:layout_marginTop="3dp" />
  </RelativeLayout>

  <RelativeLayout
    android:id="@+id/rl_foot_container"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_alignParentBottom="true"
    android:background="#FFFFFF">

    <Button
      android:id="@+id/bt_send"
      android:layout_width="wrap_content"
      android:layout_height="30dp"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
      android:layout_marginBottom="5dp"
      android:layout_marginRight="5dp"
      android:background="@drawable/bt_send_selector"
      android:paddingLeft="5dp"
      android:paddingRight="5dp"
      android:text="发送"
      android:textColor="#FFFFFF"
      android:textSize="14sp" />
  </RelativeLayout>

</RelativeLayout>
