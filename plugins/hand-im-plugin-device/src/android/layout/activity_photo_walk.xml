<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EBECF0">
  <LinearLayout
    android:id="@+id/ll_fill"
    android:layout_width="fill_parent"
    android:layout_height="1dp"
    android:orientation="vertical"
    android:background="#2A5BA2"
    android:visibility="gone">
  </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#2A5BA2">

        <Button
            android:id="@+id/bt_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/selector_back_arrow"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:paddingBottom="5dp"
            android:paddingLeft="6dp"
            android:paddingRight="40dp"
            android:paddingTop="5dp"
            android:text="相册"
            android:textColor="@drawable/xml_back_textcolor"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:maxLength="16"
            android:text="最近照片"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <Button
            android:id="@+id/bt_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:paddingBottom="5dp"
            android:paddingLeft="40dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="取消"
            android:textColor="@drawable/xml_back_textcolor"
            android:textSize="18sp" />

    </RelativeLayout>
    <GridView
        android:id="@+id/gv_photo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:numColumns="3"
        android:layout_weight="1">

    </GridView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF">

      <TextView
        android:id="@+id/tv_preview"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_marginLeft="10dp"
        android:text="预览"
        android:clickable="false"
        android:textSize="14sp"
        android:textColor="#DDDEE2"
        android:layout_centerVertical="true"/>

        <Button
            android:id="@+id/bt_send"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/bt_send_press"
            android:enabled="false"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="发送"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />
    </RelativeLayout>
</LinearLayout>
