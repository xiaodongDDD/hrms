<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:gravity="end"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtv_received_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="time"
        android:textColor="#929292"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgv_chat_left_head_portrait"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/header" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtv_chat_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="name"
                android:textColor="#626262"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textv_chat_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="60dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/shape_left_chat_item"
				android:textIsSelectable="true"
                android:gravity="center_vertical"
                android:paddingBottom="8dp"
                android:paddingLeft="21dp"
                android:paddingRight="21dp"
                android:paddingTop="9dp"
                android:textColor="#FF4A4A4A"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/imgv_chat_img"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="60dp"
                android:layout_marginStart="5dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imgv_left_voice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/gxt"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textv_chat_right_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="20dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="20dp"
        android:layout_marginStart="60dp"
        android:background="@drawable/shape_right_chat_item"
		android:textIsSelectable="true"
        android:gravity="center_vertical"
        android:paddingBottom="8dp"
        android:paddingLeft="21dp"
        android:paddingRight="21dp"
        android:paddingTop="9dp"
        android:textColor="#FFFFFFFF"
        android:textSize="17sp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/imgv_chat_right_img"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="20dp"
        android:layout_marginStart="60dp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/imgv_right_voice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/gxs"
        android:visibility="gone" />
</LinearLayout>