<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:minHeight="48dp"
    >
    <CheckBox
        android:id="@+id/ckbCheckOrg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:button="@drawable/item_check_box"/>
    <TextView
        android:id="@+id/txtOrg"
        android:layout_toRightOf="@+id/ckbCheckOrg"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="#000000"
        android:text="组织架构"
        />
    <RelativeLayout
        android:id="@+id/nextLevel"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:paddingRight="10dp"
        >
        <TextView
            android:id="@+id/line_bar"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#e2e2e2"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            />
        <ImageView
            android:id="@+id/img_org_str"
            android:layout_toRightOf="@+id/line_bar"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/org_str"
            />
        <TextView
            android:layout_toRightOf="@+id/img_org_str"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="下级"
            android:textColor="#FF003CA7"
            />
    </RelativeLayout>

</RelativeLayout>